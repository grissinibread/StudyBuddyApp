<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.studybuddy.controllers.userCardController"
            prefHeight="160.0" prefWidth="400.0"
            style="-fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10;">

    <children>
        <!-- Main horizontal layout -->
        <HBox layoutX="10.0" layoutY="10.0" spacing="15.0">
            <children>
                <!-- Profile image -->
                <ImageView fx:id="OUimage"
                           fitHeight="100.0"
                           fitWidth="80.0"
                           preserveRatio="true"
                           smooth="true" />

                <!-- User info -->
                <VBox spacing="5.0">
                    <children>
                        <!-- Change Text to Label -->
                        <Label fx:id="userName" text="Name Placeholder" style="-fx-text-fill: #3a3a3a; -fx-font-size: 16px;" />
                        <Label fx:id="major" text="Major &amp; Class" style="-fx-text-fill: #666666; -fx-font-size: 12px;" />
                        <Label text="Interests:" style="-fx-text-fill: #444444; -fx-font-size: 12px;" />
                        <HBox spacing="6.0">
                            <children>
                                <Label fx:id="interest1" text="Interest1" style="-fx-background-color: #e1e1ff; -fx-padding: 3 8; -fx-background-radius: 5;" />
                                <Label fx:id="interest2" text="Interest2" style="-fx-background-color: #e1e1ff; -fx-padding: 3 8; -fx-background-radius: 5;" />
                                <Label fx:id="interest3" text="Interest3" style="-fx-background-color: #e1e1ff; -fx-padding: 3 8; -fx-background-radius: 5;" />
                            </children>
                        </HBox>
                        <Label fx:id="gradYear" text="Grad Year" style="-fx-text-fill: #999999; -fx-font-size: 11px;" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Bottom button row -->
        <HBox layoutX="10.0" layoutY="130.0" spacing="220.0">
            <children>
                <Button fx:id="nahButton" text="Nah"
                        style="-fx-background-color: #ff4d4d; -fx-text-fill: white;" prefWidth="60.0" />
                <Button fx:id="matchButton" text="Match"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="60.0" />
            </children>
        </HBox>
    </children>
</AnchorPane>
