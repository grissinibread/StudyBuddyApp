<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="body" prefHeight="600.0" prefWidth="1024.0" stylesheets="@../styles/dashBoard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studybuddy.controllers.dashboardController">

    <!-- Header Section -->
    <HBox id="header" prefHeight="75.0" prefWidth="1024.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Button id="profileButton" fx:id="dashboard_profileButton" mnemonicParsing="false" text="Profile">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Button>

            <Region prefWidth="200.0" HBox.hgrow="ALWAYS" />

            <Text id="title" fill="black" text="Discover" textAlignment="CENTER">
                <font>
                    <Font size="25.0" />
                </font>
            </Text>

            <Region prefWidth="200.0" HBox.hgrow="ALWAYS" />

            <Button id="logoutButton" fx:id="dashboard_LogoutButton" mnemonicParsing="false" text="Logout">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>

    <!-- Add Space Between Header and User Cards -->
    <Region prefHeight="100.0" />

    <!-- Main Content Section (User Cards) -->
    <AnchorPane layoutX="108.0" layoutY="112.0" prefHeight="376.0" prefWidth="853.0" AnchorPane.bottomAnchor="112.0" AnchorPane.topAnchor="112.0">
        <children>
            <HBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <children>
                    <AnchorPane prefHeight="160.0" prefWidth="400.0" style="-fx-background-color: #f4f4f4; -fx-border-radius: 10;">
                        <fx:include fx:id="user1" source="userCard.fxml" />
                    </AnchorPane>
      
                    <AnchorPane prefHeight="160.0" prefWidth="400.0" style="-fx-background-color: #f4f4f4; -fx-border-radius: 10;">
                        <fx:include fx:id="user2" source="userCard.fxml" />
                    </AnchorPane>
                </children>
            </HBox>

            <HBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="180.0">
                <children>
                    <AnchorPane prefHeight="160.0" prefWidth="400.0" style="-fx-background-color: #f4f4f4; -fx-border-radius: 10;">
                        <fx:include fx:id="user3" source="userCard.fxml" />
                    </AnchorPane>

                    <AnchorPane prefHeight="160.0" prefWidth="400.0" style="-fx-background-color: #f4f4f4; -fx-border-radius: 10;">
                        <fx:include fx:id="user4" source="userCard.fxml" />
                    </AnchorPane>
                </children>
            </HBox>
        </children>
    </AnchorPane>

    <!-- Footer Section -->
    <HBox id="footer" prefHeight="75.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <children>
            <Button fx:id="dashboard_ConnectionsButton" mnemonicParsing="false" text="Connections" />

            <Region prefWidth="200.0" HBox.hgrow="ALWAYS" />

            <Button fx:id="refreshMatches" mnemonicParsing="false" text="Refresh Matches" />
        </children>
    </HBox>

</AnchorPane>
