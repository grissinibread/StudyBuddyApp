<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studybuddy.controllers.connectionsController">
   <children>
      <!-- Title -->
      <Text layoutX="381.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Connections">
         <font>
            <Font size="41.0" />
         </font>
      </Text>

      <!-- Dashboard Button -->
      <Button fx:id="connections_dashboardButton" layoutX="15.0" layoutY="14.0" mnemonicParsing="false" text="Dashboard" AnchorPane.leftAnchor="10.0" />

      <!-- Scrollable Container for Connections -->
      <ScrollPane fitToWidth="true" AnchorPane.topAnchor="75.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <content>
            <VBox fx:id="connectionsListContainer" spacing="15.0" padding="20.0">
               <!-- Connection entries will be added here programmatically -->
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>