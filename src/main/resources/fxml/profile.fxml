<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studybuddy.controllers.profileController" stylesheets="@../styles/profile.css">
    <children>
        <VBox spacing="20" alignment="TOP_LEFT" prefWidth="1024.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Header -->
            <HBox id="header" prefWidth="1024.0" spacing="20">
                <Button fx:id="profile_dashboardButton" text="Dashboard" HBox.hgrow="NEVER"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Text text="Profile Page" styleClass="titleText" HBox.hgrow="ALWAYS" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="profile_SaveButton" text="Save" HBox.hgrow="NEVER"/>
            </HBox>

            <!-- Profile Section  -->
            <HBox spacing="30" alignment="TOP_LEFT" prefWidth="1024.0">
                <VBox spacing="12" alignment="TOP_LEFT" prefWidth="350">
                    <Text id="UnameTxt" text="firstName lastName" styleClass="nameText" />
                    <Text id="UmajorYrTxt" text="Major and class of GradYr" />
                    <Text id="UemailTxt" text="email@example.com" />
                    <Text id="UageTxt" text="Age: 20" />
                    <Button fx:id="profile_editProfButton" text="Edit Profile" />
                </VBox>

                <!-- Interests -->
                <VBox spacing="12" alignment="TOP_LEFT" prefWidth="350">
                    <Text text="Interests:" styleClass="sectionHeader" />

                    <Text id="Uint1" text="Interest1" />
                    <Text id="Uint2" text="Interest2" />
                    <Text id="Uint3" text="Interest3" />
                    <Text id="Uint4" text="Interest4" />
                </VBox>

                <!-- Spacer -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Profile Picture -->
                <VBox spacing="12" alignment="CENTER" prefWidth="200">
                    <ImageView fx:id="profilePic" fitWidth="150" fitHeight="150" preserveRatio="true" />
                    <Text text="Profile Picture" styleClass="sectionHeader" />
                </VBox>
            </HBox>

            <!-- About Me -->
            <VBox spacing="12" alignment="TOP_LEFT">
                <Text text="About Me:" styleClass="sectionHeader" />
                <TextFlow id="UbioTxt" prefWidth="800.0">
                    <Text text="This is your bio text. Tell us about yourself." wrappingWidth="780.0">
                        <font>
                            <Font size="16" />
                        </font>
                    </Text>
                </TextFlow>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
